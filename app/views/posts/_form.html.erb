<% if logged_in? %>
    <%= turbo_frame_tag "post_builder" do %>
        <%= form_with model: [subject, post] do |form| %>
            <div class="creation-panel">
                <h2>Create a post</h2>

                <%= form.label :title %>
                <%= form.text_field :title, placeholder: "Title" %>

                <%= form.label :body %>
                <%= form.text_area :body, placeholder: "Write details here..." %>

                <% post.errors.full_messages.each do |message| %>
                    <div class="alert"><%= message %></div>
                <% end %>

                <%= form.submit "Confirm" %>
            </div>
        <% end %>
    <% end %>
<% end %>