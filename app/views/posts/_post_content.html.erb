<article class="comment-display">
    <aside class="comment-column-left">
        <h2><%= @post.user.name %></h2>
    </aside>

    <article class="comment-column-right">
        <h3><%= @post.title %></h3>
        <p><%= @post.body %></p>
        <footer><%= @post.created_at.to_fs(:full_date) %></footer>
    </article>
</article>
