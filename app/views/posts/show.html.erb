<div>
    <h2><%= @post.user.name %></h2>
    <h3><%= @post.title %></h3>
    <p><%= @post.body %></p>
    <footer><%= @post.created_at %></footer>
</div>

<%= render @post.comments.limit_records(@record_id, @page_limit) %>

<%= render partial: "application/pager", 
locals: {max_pages: @post.comments.max_pages(@page_limit)} %>

<% if logged_in? %>
    <h2>Create a comment:</h2>
    <%= render 'comments/form' %>
<% end %>