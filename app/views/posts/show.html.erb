<div>
    <h2><%= @post.user.name %></h2>
    <h3><%= @post.title %></h3>
    <p><%= @post.body %></p>
    <footer><%= @post.created_at %></footer>
</div>
<% @post.comments.limit_records(@record_id, @page_limit).each do |comment|%>
    <div class="comment">
        <h2><%= comment.user.name %></h2>
        <p><%= comment.body %></p>
        <footer><%= comment.created_at %></footer>
    </div>
<% end %>
<nav>
    <% @post.comments.max_pages(@page_limit).times do |i| %>
        <a href="<%= post_path(@post).
        concat("?start=#{@post.comments[@page_limit.to_i*i].id}",
        "&record_limit=#{@page_limit}")%>"><%= i+1 %></a>
    <% end %>
</nav>
<% if logged_in? %>
    <h2>Create a comment:</h2>
    <%= render 'posts/comment_form' %>
<% end %>